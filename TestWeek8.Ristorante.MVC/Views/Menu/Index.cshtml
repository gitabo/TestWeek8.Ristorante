@model IEnumerable<MenuViewModel>

<div class="row">
    <div class="col-3"></div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <h1>Elenco dei menu</h1>
        <br />
        @if(User.IsInRole("Ristoratore")){
        <a class="btn btn-success" asp-controller="Menu" asp-action="Create" role="button">New Menu</a>
        }
        <p />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Menu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        @*HTML HELPER*@
                        <td>@item.Nome</td>
                        <td>
                            <a type="button" value="Piatti" asp-controller="Menu" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-eye"></i></a>
                        </td>
                        @if(User.IsInRole("Ristoratore")){
                        <td>
                            <a href="#" onclick="deleteMenu(@item.Id) return false;"> Delete</a>
                        </td>
                        }
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th> @Model.Count() </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
        <div class="col-3"></div>
    </div>
</div>


@section Scripts{
